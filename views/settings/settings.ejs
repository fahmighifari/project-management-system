    <form class="form-horizontal" method="POST">
      <div class="form-group">
        <label for="inputEmail" class="col-sm-2 control-label">User</label>
        <div class="col-sm-10">
            <select class="form-control" name="user">
            <option value="">Choose an user...</option>
