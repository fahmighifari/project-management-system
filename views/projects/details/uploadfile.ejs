<div class="container" style="float: right; width: 80%">
  <div class="page-header">
    <h1>Upload</h1>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><b>Upload an image file</b></h3>
    </div>
    <div class="panel-body">
      <div class="container">
        <form ref='uploadForm'
        id='uploadForm'
        action='/projects/details/<%=idURL%>/issues/upload/<%=issueidURL%>'
        method='post'
        encType="multipart/form-data">
        <span class="btn btn-default btn-file">
          Browse <input type="file" accept="image/*" name="uploadedfile">
        </span>
        <input type='submit' class="btn btn-primary" value='Upload!' />
      </form>
    </div>
  </div>
</div>

</div>

