<% include ../../partials/header %>
<% include ../../partials/menu %>
<div class="container" style="float: left; width: 20%">
  <ul class="nav nav-sidebar">
    <li><a href="/projects/details/<%=idURL%>/overview">Overview <span class="sr-only">(current)</span></a></li>
    <li><a href="/projects/details/<%=idURL%>/activity">Activity</a></li>
    <li>&nbsp</li>
  </ul>
  <ul class="nav nav-sidebar">
    <li class="activesidebar"><a href="/projects/details/<%=idURL%>/members">Members</a></li>
    <li><a href="/projects/details/<%=idURL%>/issues">Issues</a></li>
  </ul>
</div>

<div class="container" style="float: right; width: 80%">
<div class="panel-body">
  <form method="POST" action="/projects/details/<%=idURL%>/addmember">
    <div class="form-group row">
      <label class="col-sm-2 col-form-label" >
        Name
      </label>
      <div class="col-sm-10">
        <input class="form-control" type="text" name="name"  value="<%= data[0].name %>" placeholder="name" readonly>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">
        Member</label>
        <div class="col-sm-10">
          <% for(let x=0; x<userData.length; x++) { %>
            <div class="checkbox">
              <label>
                <input type="checkbox" name="members" value="<%=userData[x].userid%>"<%=(members.indexOf(userData[x].userid) !== -1) ? " checked" : "" %>>
                <%=userData[x].firstname + " " + userData[x].lastname %>
              </label>
            </div>
            <% } %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-10">
            <button type="submit" name="submit" class="btn btn-primary">Update</button>
            <a href="/projects/details/<%=idURL%>/members" class="btn btn-primary">Cancel</a>
          </div>
        </div>
      </form>
    </div>
  </div>
  <% include ../../partials/footer %>
